{
  "compilerOptions": {
    "outDir": "build/bb",
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/backbone/**/*"],
  "exclude": ["node_modules/**/*"]
}

