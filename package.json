{
  "name": "firestore-sqlite-sync",
  "version": "0.1.18",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**/electron",
      "**/electron/**",
      "**/electron-forge",
      "**/electron-forge/**",
      "**/electron-squirrel-startup",
      "**/electron-squirrel-startup/**",
      "**/electron-rebuild",
      "**/electron-rebuild/**"
    ]
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --scope=@firestore-sqlite-sync/* build",
    "watch": "lerna run --scope=@firestore-sqlite-sync/* build",
    "build-core": "yarn workspace @firestore-sqlite-sync/core run build",
    "watch-core": "yarn workspace @firestore-sqlite-sync/core run watch",
    "publish": "yarn build && lerna changed && cross-env HUSKY_BYPASS=true lerna publish --scope=@firestore-sqlite-sync/*",
    "start-react": "yarn workspace react-ts-app run start",
    "clean": "lerna clean -y && rimraf node_modules",
    "reinstall": "yarn run clean && yarn run bootstrap"
  },
  "// devDependencies": {
    "@types/node": "Needed for unit test assertions (assert.equal() etc.)",
    "shx": "Needed for development-time package.json scripts"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@types/jest": "^26.0.3",
    "@types/node": "^12.12.47",
    "firebase": "^7.15.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "^2.0.5",
    "rollup": "^2.19.0",
    "shx": "^0.3.2",
    "ts-jest": "^26.1.1",
    "tslib": "^2.0.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.9.6",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "husky": "^4.2.5",
    "cross-env": "7.0.2",
    "@types/app-root-path": "^1.2.4",
    "@types/better-sqlite3": "^5.4.0",
    "better-sqlite3": "^7.1.0",
    "rimraf": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
